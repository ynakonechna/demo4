<div class="container" style="min-height: 50vh">
    <div class="row">
        <div class ="col-xs-12 col-sm-12 col-md-6 col-lg-6 text-center mx-auto">
            <h2 class="nuwm_text">Кімната <br> (новий запис)</h2>
          <form method="post">
              <div class="form-group">
                  <label for="Id_hostel" class="nuwm_text_form">Номер гуртожитка</label>
                    <input list="id" class="form-control" name="Id_hostel"
                    placeholder="Вкажіть номер гуртожитка" autocomplete="off">
                  <datalist id="id">
                      {{#each hostels}}
                      <option value="{{this.Id_hostel}}">
                      {{this.number}}
                      </option>
                      {{/each}}
                  </datalist>
                  </div>
              <div class="form-group">
                  <label for="number_room" class="nuwm_text_form">Номер кімнати</label>
                  <input type="text" class="form-control" name="number_room" placeholder="Введіть номер кімнати">
              </div>
              <div class="form-group">
                  <label for="number_seats" class="nuwm_text_form">Кількість місць</label>
                  <input type="text" class="form-control" name="number_seats" placeholder="Введіть кількість місць">
              </div>
              <div class="form-group">
                  <label for="characteristic" class="nuwm_text_form">Характеристика</label>
                  <input type="text" class="form-control" name="characteristic" placeholder="Введіть характеристику">
              </div>
              <div class="form-group">
                  <label for="date_last_repair" class="nuwm_text_form">Дата останного ремонту</label>
                  <input type="date" class="form-control" name="date_last_repair" placeholder="Введіть дату останнього ремонту">
              </div>
             <button type="submit" class="nuwm_button">Зберегти</button>
             <button type="reset" class="nuwm_button">Очистити</button>
          </form>
        </div>
    </div>
</div>
